<%= form_with(model: project) do |f| %>
  <% if project.errors.any? %>
    <article class="message is-danger">
      <div class="message-header">
        <p>
          <%= pluralize(project.errors.count, "error") %> prohibited this form from being saved:
        </p>
      </div>
      <div class="message-body">
        <% project.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </div>
    </article>
  <% end %>

  <div class="field">
    <%= f.label :title, class: 'label' %>
    <p class="control">
      <%= f.text_field :title, class: 'input', required: 'required' %>
    </p>
  </div>

  <div class="field">
    <p class="control">
      <label class="checkbox">
        <%= f.check_box :is_public %>
        <%= Project.human_attribute_name(:is_public) %>
      </label>
    </p>
  </div>

  <div class="field is-grouped">
    <p class="control">
      <%= f.submit class: 'button is-primary' %>
    </p>
    <p class="control">
      <%= link_to 'Back', url_for(:back), class: 'button is-link' %>
    </p>
  </div>
<% end %>
